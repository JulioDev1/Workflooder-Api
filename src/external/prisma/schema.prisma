datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
generator client {
  provider = "prisma-client-js"
}

model User  {
  id               String     @id @unique @default(uuid())
  name             String
  email            String     @unique
  password         String
  number           Number[]
  role             String
  act_area         String
  createAt         DateTime    @default(now())
  refresh_Tokens   Refresh_Token?
  curriculum       Curriculum?
  sentMessages     Message[]   @relation("SenderMessage")
  status           Boolean     @default(false)
  receiverMessages Message[]   @relation("ReceiverMessage")
  updateAt         DateTime
}

model Number{
  id String @id @unique @default(uuid())
  ddd String
  number String
  user User @relation(fields: [userId], references: [id])
  userId String @unique
}

model Refresh_Token  {
  id        String       @id @unique @default(uuid())
  expiresIn Int
  user      User         @relation(fields: [userId], references: [id])
  userId    String        @unique
}

model Curriculum  {
   id String @id @unique @default(uuid())
   title String
   technology Technology[]
   salary   Float
   linkedin String
   description String
   user User @relation(fields: [userId], references: [id])
   userId String @unique
}

model Technology{
  id String @id @unique @default(uuid())
  name String
  curriculum Curriculum @relation(fields: [curriculumId], references: [id])
  curriculumId String @unique
}

model Message{
  id          String        @id @unique @default(uuid())
  content     String
  sender      User          @relation("SenderMessage",fields: [senderId], references: [id])
  senderId    String       
  receiver    User          @relation("ReceiverMessage",fields: [receiverId], references: [id])
  receiverId  String        
  createdAt   DateTime      @default(now())
}
